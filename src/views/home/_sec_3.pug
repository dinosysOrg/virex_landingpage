- vi = homeData.section3.dataVi
- en = homeData.section3.dataEn
- lang === 'vi' ? dataLang = vi : dataLang = en

.sec.section.section-3(data-anchor="vision")
  .container-fuild
    ul.section-3__list.list-inline
      each item, index in dataLang
        - i = index + 1
        li(class=`section-3__list_${i} list-inline-item`, onclick=`void(0)`)
          h3.title !{item.title}
          .txtHover 
            span !{item.title}
            div !{item.txt}
